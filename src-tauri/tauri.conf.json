{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "iracehud",
    "version": "0.0.0"
  },
  "tauri": {
    "windows": [
      {
        "label": "main",
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fileDropEnabled": false,
        "center": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "fullscreen": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "title": "iracehud"
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "targets": "nsis",
      "identifier": "dev.xikxp1.iracehud",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
